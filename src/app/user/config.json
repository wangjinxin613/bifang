{
  "name": "用户管理",
  "id": "user",
  "parentName": "系统",
  "parentId": "system",
  "pages": [
    {
      "id": "list",
      "name": "审批管理列表",
      "type": "list",
      "menu": {
        "show": true,
        "name": "全部"
      },
      "data": {
        "api": "@get('/user/list')",
        "deleteApi": "@get('/activity/delete')",
        "searchForm": [
          {
            "type": "select",
            "selectOptions": "@select('/user/getRoleName','roleName','id')",
            "label": "所属角色",
            "name": "roleName"
          },
          {
            "type": "input",
            "label": "姓名",
            "name": "nickName"
          },
          {
            "type": "dateRange",
            "label": "生日",
            "name": ["birthdayStart", "birthdayEnd"]
          },
          {
            "type": "number",
            "label": "年龄",
            "name": "age"
          }
        ],
        "columns": [
          {
            "title": "用户id",
            "dataIndex": "id"
          },
          {
            "title": "用户名",
            "dataIndex": "username"
          },
          {
            "title": "所属角色",
            "dataIndex": "roleName"
          },
          {
            "title": "姓名",
            "dataIndex": "nickName"
          },
          {
            "title": "性别",
            "dataIndex": "sex"
          },
          {
            "title": "联系方式",
            "dataIndex": "phone"
          },
          {
            "title": "操作",
            "scopedSlots": {
              "customRender": "action"
            },
            "see": true,
            "del": true
          }
        ]
      }
    },
    {
      "id": "form",
      "name": "用户信息",
      "type": "form",
      "data": {
        "createApi": "@post('/activity/deploy')",
        "updateApi": "@post('/activity/deploy')",
        "detailApi": "@get('/activity/selectById')",
        "deleteApi": "@get('/activity/delete')",
        "formOption": [
          {
            "type": "input",
            "label": "用户名",
            "name": "username",
            "required": true,
            "validator": [
              {
                "validator": "@usernameRule"
              }
            ],
            "onChange": "@change"
          },
          {
            "type": "password",
            "label": "密码",
            "name": "password",
            "required": true,
            "onChange": "@change"
          },
          {
            "type": "select",
            "label": "所属角色",
            "name": "roleName",
            "required": true,
            "selectOptions": "@select('/user/getRoleName','roleName','id')",
            "mode": "default",
            "showSearch": true,
            "onChange": "@change"
          },
          {
            "type": "textarea",
            "value": "",
            "label": "个性签名",
            "name": "describe",
            "width": 10,
            "onChange": "@change"
          },
          {
            "type": "number",
            "value": "",
            "label": "年龄",
            "name": "age",
            "width": 8,
            "onChange": "@change",
            "max": 100,
            "min": 0,
            "precision": 0,
            "step": 10,
            "required": true
          },
          {
            "type": "money",
            "value": "",
            "label": "月收入",
            "name": "income",
            "width": 8,
            "onChange": "@change",
            "max": 10000000,
            "min": -10,
            "precision": 2,
            "step": 10,
            "required": true
          },
          {
            "type": "date",
            "label": "出生日期",
            "name": "birthday",
            "required": true,
            "onChange": "@change"
          }
        ]
      }
    },
    {
      "id": "detail",
      "extend": {
        "id": "form"
      }
    }
  ]
}